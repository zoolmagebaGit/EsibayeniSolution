
@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
}
<div class="card">
    <div class="card-body">
        <div class="row">

            <div class="container col-lg-12">
                <h2>Role Details.</h2>

                <div>

                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Name) :
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                    </dl>
                </div>
                <h4>List of users in this role</h4>
                @if (ViewBag.UserCount == 0)
                {
                    <hr />
                    <p>No users found in this role.</p>
                }

                <table class="table">

                    @foreach (var item in ViewBag.Users)
                    {
                        <tr>
                            <td>
                                @item.UserName
                            </td>
                            <td></td>
                        </tr>
                    }
                </table>
                <p>
                    <div style="text-decoration:none" class="btn btn-warning btn-sm">
                        @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
                    </div> |
                    @*<div style="text-decoration:none" class="btn btn-warning btn-sm">*@
                    <div style="text-decoration:none" class="btn btn-success btn-sm">
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </p>


            </div>
        </div>
    </div>
</div>

