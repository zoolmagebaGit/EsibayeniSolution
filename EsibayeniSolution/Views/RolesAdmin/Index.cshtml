@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    /**/

    ViewBag.Title = "Role";
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
}
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="container col-lg-12">
                <br />
                <br />
                <p style="text-decoration:none" class="btn btn-warning btn-sm">
                    @Html.ActionLink("ADD Role", "Create")
                </p>
                <br />
                <br />
                <table class="table">
                    <tr>
                        <th>
                            Role  @Html.DisplayNameFor(model => model.First().Name)
                        </th>
                        <th>

                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                <div style="text-decoration:none" class="btn btn-warning btn-sm">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                                </div> |
                                <div style="text-decoration:none" class="btn btn-success btn-sm">
                                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                                </div>|
                                <div style="text-decoration:none" class="btn btn-danger btn-sm">
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </div>
                            </td>
                        </tr>
                    }

                </table>

            </div>

        </div>
    </div>
</div>