

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
}
@model EsibayeniSolution.ViewModels.EditUserViewModel


<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="container col-lg-8">


                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>Edit User Form.</h4>
                        <hr />
                        @Html.ValidationSummary(true)
                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("Roles", new { @class = "control-label col-md-2" })
                            <span class=" col-md-10">
                                @foreach (var item in Model.RolesList)
                                {
                                    <input type="radio" name="SelectedRole" value=" @item.Value" checked=" @item.Selected" class="checkbox-inline" />
                                    @Html.Label(item.Value, new { @class = "control-label" })
                                }
                            </span>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-success" />
                            </div>
                        </div>
                    </div>
                    <div style="text-decoration:none" class="btn btn-success btn-sm">
                        @Html.ActionLink("Back to List", "Index")
                    </div>

                }

            </div>
        </div>
    </div>
</div>


