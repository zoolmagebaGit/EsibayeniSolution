@model EsibayeniSolution.Models.RegisterViewModel


@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
}



<div class="view" style=" background-color:white; background-repeat: no-repeat; background-size: cover; background-position: center center;">
    <!-- Mask & flexbox options-->
    <div class="mask rgba-gradient d-flex justify-content-center align-items-center">
        <!-- Content -->
        <div class="container">
            <!--Grid row-->
            <div class="row mt-5">
                <!--Grid column-->
                <div class="col-md-6 mb-5 mt-md-0 mt-5 white-text text-center text-md-left">
                    <h1 class="h1-responsive font-weight-bold wow fadeInLeft" data-wow-delay="0.3s">Sign up right now! </h1>
                    <hr class="hr-light wow fadeInLeft" data-wow-delay="0.3s">
                    <h6 class="mb-3 wow fadeInLeft" data-wow-delay="0.3s">
                        <H1>
                            List<br />
                            <div style="color:black">These shouldn't take long<br /> Thank you for your Patience</div>
                        </H1>

                        Registration can take as little as 15 minutes to complete – get started today!
                    </h6>

                </div>
                <!--Grid column-->
                <!--Grid column-->
                <div class="col-md-8 col-xl-5 mb-4">
                    <!--Form-->
                    <div class="card wow fadeInRight" data-wow-delay="0.3s">
                        <div class="card-body">
                            <!--Header-->
                            <div class="text-center">
                                <h3 class="white-text">
                                    <i class="fa fa-home white-text"></i> Register:
                                </h3>
                                <hr class="hr-light" style="background-color:orange">
                            </div>
                            <!--Body-->
                            @using (Html.BeginForm("Create", "UsersAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()


                                @Html.ValidationSummary("", new { @class = "text-error" })
                                <div class="form-group">

                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">

                                    <div class="col-md-10">
                                        @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">

                                    <div class="col-md-10">
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = " Confirm Password", @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">

                                    <div class="inline-ul text-center d-flex justify-content-center"><input type="submit" class="btn btn-warning pull-right" value="Sign up" /></div>
                                    <hr class="hr-light mb-3 mt-4">
                                    <div class="inline-ul text-center d-flex justify-content-center">
                                        <a class="p-2 m-2 tw-ic">
                                            <a href="http://scripteden.com/download/eden-ui/" target="_blank" class="btn-social btn-facebook align-content-center"><i class="fab fa-facebook-f white-text "> </i></a>
                                        </a>
                                        <a class="p-2 m-2 li-ic">
                                            <a href="http://scripteden.com/download/eden-ui/" target="_blank" class="btn-social btn-dropbox"> <i class="fab fa-twitter white-text "> </i></a>
                                        </a>
                                        <a class="p-2 m-2 ins-ic">
                                            <a href="http://scripteden.com/download/eden-ui/" target="_blank" class="btn-social btn-dribbble"> <i class="fab fa-instagram white-text"> </i></a>
                                        </a>
                                    </div>
                                </div>
                            }


                        </div>
                    </div>
                    <!--/.Form-->
                </div>
                <!--Grid column-->
            </div>
            <!--Grid row-->
        </div>
        <!-- Content -->
    </div>
    <!-- Mask & flexbox options-->
</div>


