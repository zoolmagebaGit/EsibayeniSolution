
@model Microsoft.AspNet.Identity.EntityFramework.IdentityUser

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
}
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="container col-lg-12">

                <h3>Are you sure you want to delete this Role? </h3>
                <p>Deleting this Role will remove all users from this role. It will not delete the users.</p>
                <div>
                    <h4>Role</h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.UserName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.UserName)
                        </dd>
                    </dl>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-danger" /> |
                            @*<div style="text-decoration:none" class="btn btn-primary btn-sm">*@
                            <div style="text-decoration:none" class="btn btn-success btn-sm">
                                @Html.ActionLink("Back to List", "Index")
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


